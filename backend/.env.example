# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/sharechat?retryWrites=true&w=majority

# Chat Password (used for authentication)
# RECOMMENDED: Use a bcrypt hash instead of plain text
# To generate a hash: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('your_password', 10, (e,h) => console.log(h));"
# Example hash: $2a$10$N9qo8uLOickgx2ZMRZoMyeIjZAgcfl7p92ldGxad68LJZdL17lhWy
CHAT_PASSWORD=your_secure_password_here

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Token Expiry (default: 24h)
JWT_EXPIRY=24h

# Password Expiration Settings (3 months / 90 days by default)
# Set PASSWORD_SET_DATE when you change the password
PASSWORD_SET_DATE=2024-01-15
PASSWORD_EXPIRY_DAYS=90

# Client URL (for CORS in development, can be comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173

# Port (optional, defaults to 3000)
PORT=3000

# Node Environment
NODE_ENV=development
